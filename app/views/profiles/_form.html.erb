<% if @profile.errors.any? %>
  <ul>
    <% @profile.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class = "row">
  <div class = "col-xs-12">
    <%= form_for(@profile, :html => {class: "form-horizontal", role: "form"}) do |p| %>
    <div class = "form-group">  
      <div class = "control-label col-sm-2">
        <%= p.label :title %>
      </div>
      <div class = "col-sm-12">
        <%= p.text_field :title, class: "form-control", placeholder: "Profile Name", autofocus: true %>
      </div>
    </div>
    <div class = "form-group">
      <div class = "control-label col-sm-2">
        <%= p.label :description %> 
      </div>
      <div class = "col-sm-12">
       <%= p.text_area :description, class: "form-control", rows:10, placeholder: "Profile Description", autofocus:true %>
      </div>
    </div>
    <div class = "form-group">
      <div class = "col-sm-offset-2 col-sm-10">
        <%= p.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <div class = "col-xs-4 col-xs-offset-4">
      [<%= link_to "Cancel Request and return to profile listing", profiles_path %>]
    </div>
    <% end %>
  </div>
</div>
