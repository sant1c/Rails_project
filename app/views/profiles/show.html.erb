<h2 align="center">
  Title: <%= @profile.title %>
</h2>
<div class = "card bg-secondary col-lg-8 offset-lg-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format (@profile.description) %>
  <div class = "profile-actions">
    <%= link_to "View All Profiles", profiles_path, class: "btn btn-xs btn-success" %>
     <%= link_to "Delete Profile", profile_path(@profile), method: :delete, 
                  data: {confirm: "Are you sure you want to delete this article"}, 
                  class: "btn btn-xs btn-danger" %>
    <%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn btn-xs btn-primary" %>
  </div>
</div>