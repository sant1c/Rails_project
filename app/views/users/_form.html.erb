<%= render "shared/errors", obj: @user %>

<div class = "row">
  <div class = "col-lg-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |p| %>
    <div class = "form-group row">  
      <div class = "col-form-label col-lg-2">
        <%= p.label :username %>
      </div>
      <div class = "col-lg-10">
        <%= p.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
      </div>
    </div>
    <div class = "form-group row">
      <div class = "col-form-label col-lg-2">
        <%= p.label :email %> 
      </div>
      <div class = "col-lg-10">
       <%= p.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus:true %>
      </div>
    </div>
    <div class = "form-group row">
      <div class = "col-form-label col-lg-2">
        <%= p.label :password %> 
      </div>
      <div class = "col-lg-10">
       <%= p.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus:true %>
      </div>
    </div>
    <div class = "form-group">
      <div class = "offset-lg-5 col-lg-10">
        <%= p.submit(@user.new_record? ? "Sign Up" : "Update Your Account", class: "btn btn-primary btn-lg") %>
      </div>
    </div>
    <div class = "col-lg-4 offset-lg-4">
      [<%= link_to "Cancel Request and return to profile listing", profiles_path %>]
    </div>
    <% end %>
  </div>
</div>
